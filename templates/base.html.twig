<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    </head>
    <body>
    <style>

    </style>
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="{{ path('article') }}" class="nav-link px-2 text-secondary">Home</a></li>
                    {% if app.user %}
                    <li><a href="{{ path('app_profile')}}" class="nav-link px-2 text-white">My profile</a></li>
                    {% endif %}
                    <li><a href="{{ path('category',{'category': 1}) }}" class="nav-link px-2 text-white">category-1</a></li>
                    <li><a href="{{ path('category',{'category': 2}) }}" class="nav-link px-2 text-white">category-2</a></li>
                    <li><a href="{{ path('category',{'category': 3}) }}" class="nav-link px-2 text-white">category-3</a></li>

                </ul>



                <div class="text-end">
                    {% if app.user %}
                        <a class="text-white me-2" href="{{ path('app_profile')}}">{{ app.user.name }}</a>

                    <button type="button" class="btn btn-outline-light me-2">
                        <a class="text-white" href="{{ path('app_logout') }}">Logout</a>
                    </button>

                    {% else %}

                            <a class="text-white" href="{{ path('app_login') }}"><button type="button" class="btn btn-outline-light me-2">Login</button></a>

                        <button type="button" class="btn btn-warning">
                            <a class="text-black" href="{{ path('registration') }}">Register</a>
                        </button>
                    {% endif %}

                </div>
                <form style="display: inherit" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 ms-3" action="{{ path('blog_search') }}" method="get">
                    <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search" name="q">
                    <button class="btn btn-outline-light me-2 ms-1" type="submit">Search</button>
                </form>
            </div>

        </div>
    </header>

        {% block body %}{% endblock %}
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </body>
</html>
